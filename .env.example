# AI Bible Assistant - 환경변수 설정 파일
# .env.example 파일을 복사하여 .env로 만들고 실제 값을 입력하세요

# 개발/프로덕션 환경
NODE_ENV=development

# API 설정
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_BACKEND_URL=http://localhost:5000

# Claude AI API 설정
REACT_APP_CLAUDE_API_KEY=your_claude_api_key_here
REACT_APP_CLAUDE_API_URL=https://api.anthropic.com/v1
REACT_APP_CLAUDE_MODEL=claude-3-sonnet-20240229

# 애플리케이션 설정
REACT_APP_APP_NAME=AI Bible Assistant
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_DESCRIPTION="성경의 지혜로 여러분의 고민에 답해드리는 AI 상담사"

# 기능 플래그
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false

# 소셜 로그인 (향후 확장용)
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_KAKAO_APP_KEY=your_kakao_app_key

# 분석 도구 (향후 확장용)
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# 에러 리포팅 (향후 확장용)
REACT_APP_SENTRY_DSN=your_sentry_dsn

# 푸시 알림 (향후 확장용)
REACT_APP_VAPID_PUBLIC_KEY=your_vapid_public_key

# 배포 설정
REACT_APP_PUBLIC_URL=https://ai-bible-assistant.vercel.app
REACT_APP_SITE_URL=https://ai-bible-assistant.vercel.app

# 개발 도구
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_DEV_TOOLS=true

# 성능 설정
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# 보안 설정
REACT_APP_ENABLE_HTTPS_REDIRECT=false
REACT_APP_CORS_ORIGIN=http://localhost:3000

# 언어 설정
REACT_APP_DEFAULT_LANGUAGE=ko
REACT_APP_SUPPORTED_LANGUAGES=ko,en

# 성경 데이터 설정
REACT_APP_DEFAULT_BIBLE_TRANSLATION=개역개정
REACT_APP_SUPPORTED_TRANSLATIONS=개역개정,NIV,ESV,NLT

# 채팅 설정
REACT_APP_MAX_MESSAGE_LENGTH=1000
REACT_APP_CHAT_HISTORY_LIMIT=100
REACT_APP_AUTO_SAVE_INTERVAL=30000

# 검색 설정
REACT_APP_SEARCH_RESULTS_LIMIT=20
REACT_APP_SEMANTIC_SEARCH_THRESHOLD=0.7

# 캐싱 설정
REACT_APP_CACHE_DURATION=3600000
REACT_APP_ENABLE_OFFLINE_MODE=true

# 로그 설정
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGS=true